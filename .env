# =============================================
# TELEGRAM BOT CONFIGURATION
# =============================================

TELEGRAM_BOT_TOKEN=YOUR_DEV_BOT_TOKEN
TELEGRAM_BOT_USERNAME=gym_bot_dev
TELEGRAM_BOT_NAME="Gym Bot Dev"

TELEGRAM_POLLING_TIMEOUT=10
TELEGRAM_POLLING_LIMIT=50
TELEGRAM_POLLING_THREADS=5

TELEGRAM_PROXY_ENABLED=false
TELEGRAM_PROXY_HOST=
TELEGRAM_PROXY_PORT=
TELEGRAM_PROXY_TYPE=SOCKS5

# =============================================
# DATABASE CONFIGURATION
# =============================================

DB_HOST=localhost
DB_PORT=5433
DB_NAME=gymbot_dev
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_MAX_POOL_SIZE=5
DB_MIN_IDLE=2
DB_CONNECTION_TIMEOUT=30000
DB_IDLE_TIMEOUT=600000
DB_MAX_LIFETIME=1800000

FLYWAY_ENABLED=false
FLYWAY_BASELINE_VERSION=1

# =============================================
# APPLICATION CONFIGURATION
# =============================================

APP_NAME="Telegram Gym Bot Dev"
APP_PROFILE=dev
SERVER_PORT=8081
SERVER_CONTEXT_PATH=
APP_TIMEZONE=Europe/Moscow

ADMIN_TELEGRAM_IDS=123456789
ADMIN_CHAT_ID=123456789
MAX_LOGIN_ATTEMPTS=3

CACHE_ENABLED=false
CACHE_TTL_HOURS=1
CACHE_MAX_SIZE=100
CACHE_TYPE=caffeine

SCHEDULER_ENABLED=false
DATA_RETENTION_DAYS=7
SCHEDULER_CLEANUP_CRON=0 0 2 * * ?
SCHEDULER_REPORT_CRON=0 0 20 * * ?

ENABLE_NOTIFICATIONS=false
ENABLE_ANALYTICS=false
ENABLE_WEBHOOK=false

# =============================================
# LOGGING CONFIGURATION
# =============================================

LOG_LEVEL=DEBUG
LOG_FILE_PATH=logs/gym-bot-dev.log
LOG_FILE_MAX_SIZE=10MB
LOG_FILE_MAX_HISTORY=30
HIBERNATE_SQL_LOG=DEBUG

LOGSTASH_ENABLED=false
LOGSTASH_HOST=localhost
LOGSTASH_PORT=5000

# =============================================
# MONITORING & METRICS
# =============================================

BACKUP_ENABLED=false
PROMETHEUS_ENABLED=false
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,info,metrics,prometheus
MANAGEMENT_ENDPOINT_HEALTH_SHOW_DETAILS=always
MANAGEMENT_METRICS_EXPORT_PROMETHEUS_ENABLED=true
MANAGEMENT_METRICS_TAGS_APPLICATION=telegram-gym-bot
MANAGEMENT_METRICS_TAGS_ENVIRONMENT=dev

# =============================================
# CORS CONFIGURATION
# =============================================

CORS_ALLOWED_ORIGINS=http://localhost:*,http://127.0.0.1:*
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=*
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=3600

# =============================================
# JVM CONFIGURATION
# =============================================

JAVA_OPTS=-Xms256m -Xmx512m -XX:+UseG1GC -XX:MaxGCPauseMillis=200
JAVA_TOOL_OPTIONS=-Dfile.encoding=UTF-8 -Duser.timezone=Europe/Moscow

# =============================================
# DOCKER SPECIFIC
# =============================================

WAIT_FOR_DB=true
DB_WAIT_TIMEOUT=60
DOCKER_NETWORK=telegram-network