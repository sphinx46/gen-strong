# =============================================
# TELEGRAM BOT CONFIGURATION (ОБЯЗАТЕЛЬНО!)
# =============================================

# Токен бота, полученный от @BotFather в Telegram
# Пример: 6123456789:AAHabcdefghijklmnopqrstuvwxyz-ABCDEFGHI
TELEGRAM_BOT_TOKEN=8375214694:AAFHRwB2TTT_yn5X1ccLatg1K_sfsyRPjCA

# Username бота (без @)
TELEGRAM_BOT_USERNAME=gen_strong_bot

# Отображаемое имя бота
TELEGRAM_BOT_NAME="Gen Strong Bot"

# Настройки Long Polling (можно оставить по умолчанию)
TELEGRAM_POLLING_TIMEOUT=10
TELEGRAM_POLLING_LIMIT=50
TELEGRAM_POLLING_THREADS=5

# Настройки прокси (если нужен прокси для Telegram)
TELEGRAM_PROXY_ENABLED=false
TELEGRAM_PROXY_HOST=
TELEGRAM_PROXY_PORT=
TELEGRAM_PROXY_TYPE=SOCKS5

# =============================================
# DATABASE CONFIGURATION (БАЗА ДАННЫХ)
# =============================================

# Для разработки с H2 (in-memory) оставьте как есть
# Для разработки с PostgreSQL раскомментируйте строки ниже и настройте

# H2 Database (разработка, по умолчанию)
DB_URL=jdbc:h2:mem:gymbotdb

# PostgreSQL (если используете Docker Compose или внешнюю БД)
# DB_HOST=localhost
# DB_PORT=5433
# DB_NAME=gymbot_dev
# DB_USERNAME=postgres
# DB_PASSWORD=postgres

# Настройки пула соединений
DB_MAX_POOL_SIZE=5
DB_MIN_IDLE=2
DB_CONNECTION_TIMEOUT=30000
DB_IDLE_TIMEOUT=600000
DB_MAX_LIFETIME=1800000

# Миграции базы данных (выключены для разработки)
FLYWAY_ENABLED=false
FLYWAY_BASELINE_VERSION=1

# =============================================
# APPLICATION CONFIGURATION (ПРИЛОЖЕНИЕ)
# =============================================

# Основные настройки приложения
APP_NAME="Telegram Gym Bot Dev"
APP_PROFILE=dev
SERVER_PORT=8081
SERVER_CONTEXT_PATH=
APP_TIMEZONE=Europe/Moscow

# Безопасность
# Укажите ваш реальный Telegram ID (можно узнать у @userinfobot в Telegram)
ADMIN_TELEGRAM_IDS=2056410944
ADMIN_CHAT_ID=2056410944
MAX_LOGIN_ATTEMPTS=3

# Кэширование (выключено для разработки)
CACHE_ENABLED=false
CACHE_TTL_HOURS=1
CACHE_MAX_SIZE=100
CACHE_TYPE=caffeine

# Планировщик задач (выключен для разработки)
SCHEDULER_ENABLED=false
DATA_RETENTION_DAYS=7
SCHEDULER_CLEANUP_CRON=0 0 2 * * ?
SCHEDULER_REPORT_CRON=0 0 20 * * ?

# Дополнительные функции
ENABLE_NOTIFICATIONS=false
ENABLE_ANALYTICS=false
ENABLE_WEBHOOK=false

# =============================================
# LOGGING CONFIGURATION (ЛОГИРОВАНИЕ)
# =============================================

# Уровень логирования
LOG_LEVEL=DEBUG
LOG_FILE_PATH=logs/gym-bot-dev.log
LOG_FILE_MAX_SIZE=10MB
LOG_FILE_MAX_HISTORY=30
HIBERNATE_SQL_LOG=DEBUG

# Logstash (опционально)
LOGSTASH_ENABLED=false
LOGSTASH_HOST=localhost
LOGSTASH_PORT=5000

# =============================================
# MONITORING & METRICS (МОНИТОРИНГ)
# =============================================

BACKUP_ENABLED=false
PROMETHEUS_ENABLED=false
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,info,metrics,prometheus
MANAGEMENT_ENDPOINT_HEALTH_SHOW_DETAILS=always
MANAGEMENT_METRICS_EXPORT_PROMETHEUS_ENABLED=true
MANAGEMENT_METRICS_TAGS_APPLICATION=telegram-gym-bot
MANAGEMENT_METRICS_TAGS_ENVIRONMENT=dev

# =============================================
# CORS CONFIGURATION (CORS)
# =============================================

CORS_ALLOWED_ORIGINS=http://localhost:*,http://127.0.0.1:*
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=*
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=3600

# =============================================
# JVM CONFIGURATION (НАСТРОЙКИ JVM)
# =============================================

JAVA_OPTS=-Xms256m -Xmx512m -XX:+UseG1GC -XX:MaxGCPauseMillis=200
JAVA_TOOL_OPTIONS=-Dfile.encoding=UTF-8 -Duser.timezone=Europe/Moscow

# =============================================
# DOCKER SPECIFIC (ДЛЯ DOCKER)
# =============================================

WAIT_FOR_DB=true
DB_WAIT_TIMEOUT=60
DOCKER_NETWORK=telegram-network

