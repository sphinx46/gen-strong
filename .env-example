# =============================================
# TELEGRAM BOT CONFIGURATION
# =============================================

# Обязательные настройки бота
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_BOT_USERNAME=your_bot_username
TELEGRAM_BOT_NAME="Gym Fitness Bot"

# Настройки Long Polling
TELEGRAM_POLLING_TIMEOUT=30
TELEGRAM_POLLING_LIMIT=100
TELEGRAM_POLLING_THREADS=10

# Настройки прокси (опционально)
TELEGRAM_PROXY_ENABLED=false
TELEGRAM_PROXY_HOST=proxy.example.com
TELEGRAM_PROXY_PORT=1080
TELEGRAM_PROXY_TYPE=SOCKS5

# =============================================
# DATABASE CONFIGURATION
# =============================================

# PostgreSQL
DB_HOST=localhost
DB_PORT=5433
DB_NAME=gymbot
DB_USERNAME=postgres
DB_PASSWORD=your_database_password
DB_MAX_POOL_SIZE=15
DB_MIN_IDLE=5
DB_CONNECTION_TIMEOUT=30000
DB_IDLE_TIMEOUT=600000
DB_MAX_LIFETIME=1800000

# Flyway миграции
FLYWAY_ENABLED=true
FLYWAY_BASELINE_VERSION=1

# =============================================
# APPLICATION CONFIGURATION
# =============================================

# Основные настройки
APP_NAME="Telegram Gym Bot"
APP_PROFILE=dev
SERVER_PORT=8081
SERVER_CONTEXT_PATH=
APP_TIMEZONE=Europe/Moscow

# Безопасность
ADMIN_TELEGRAM_IDS=123456789,987654321
ADMIN_CHAT_ID=123456789
MAX_LOGIN_ATTEMPTS=5

# Кэширование
CACHE_ENABLED=true
CACHE_TTL_HOURS=24
CACHE_MAX_SIZE=2000
CACHE_TYPE=caffeine

# Планировщик
SCHEDULER_ENABLED=true
DATA_RETENTION_DAYS=180
SCHEDULER_CLEANUP_CRON=0 0 2 * * ?
SCHEDULER_REPORT_CRON=0 0 20 * * ?

# Функциональность
ENABLE_NOTIFICATIONS=true
ENABLE_ANALYTICS=false
ENABLE_WEBHOOK=false

# =============================================
# LOGGING CONFIGURATION
# =============================================

LOG_LEVEL=INFO
LOG_FILE_PATH=logs/gym-bot.log
LOG_FILE_MAX_SIZE=10MB
LOG_FILE_MAX_HISTORY=30
HIBERNATE_SQL_LOG=WARN

# Logstash (опционально)
LOGSTASH_ENABLED=false
LOGSTASH_HOST=localhost
LOGSTASH_PORT=5000

# =============================================
# MONITORING & METRICS
# =============================================

BACKUP_ENABLED=true
PROMETHEUS_ENABLED=true
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,info,metrics,prometheus
MANAGEMENT_ENDPOINT_HEALTH_SHOW_DETAILS=always
MANAGEMENT_METRICS_EXPORT_PROMETHEUS_ENABLED=true
MANAGEMENT_METRICS_TAGS_APPLICATION=telegram-gym-bot
MANAGEMENT_METRICS_TAGS_ENVIRONMENT=${APP_PROFILE:-dev}

# =============================================
# CORS CONFIGURATION
# =============================================

CORS_ALLOWED_ORIGINS=http://localhost:*,http://127.0.0.1:*
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=*
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=3600

# =============================================
# JVM CONFIGURATION
# =============================================

JAVA_OPTS=-Xms256m -Xmx512m -XX:+UseG1GC -XX:MaxGCPauseMillis=200
JAVA_TOOL_OPTIONS=-Dfile.encoding=UTF-8 -Duser.timezone=${APP_TIMEZONE:-Europe/Moscow}

# =============================================
# DOCKER SPECIFIC
# =============================================

WAIT_FOR_DB=true
DB_WAIT_TIMEOUT=60
DOCKER_NETWORK=telegram-network


# TELEGRAM BOT CONFIGURATION
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_BOT_USERNAME=your_bot_username
TELEGRAM_BOT_NAME="Gym Fitness Bot"

TELEGRAM_POLLING_TIMEOUT=30
TELEGRAM_POLLING_LIMIT=100
TELEGRAM_POLLING_THREADS=10

TELEGRAM_PROXY_ENABLED=false
TELEGRAM_PROXY_HOST=
TELEGRAM_PROXY_PORT=
TELEGRAM_PROXY_TYPE=SOCKS5

# =============================================
# INSTRUCTIONS
# =============================================
# 1. Скопируйте этот файл в .env.development
# 2. Заполните реальными значениями
# 3. Для генерации Telegram токена используйте @BotFather
# 4. Для генерации секретных ключей используйте:
#    openssl rand -base64 32 | head -c 32
# 5. Для разных сред создайте:
#    - .env.development (разработка)
#    - .env.testing (тестирование)
#    - .env.production (продакшен)